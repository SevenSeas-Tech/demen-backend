{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],

      "@shared/*": ["shared/*"],
      "@shared:containers/*": ["shared/containers/*"],
      "@shared:database/*": ["shared/infra/database/*"],
      "@shared:errors/*": ["shared/errors/*"],
      "@shared:middlewares/*": ["shared/infra/http/middlewares/*"],
      "@shared:providers/*": ["shared/containers/providers/*"],

      "@management:containers/*": ["modules/management/containers/*"],
      "@management:dtos/*": ["modules/management/@types/dtos/*"],
      "@management:errors/*": ["modules/management/errors/*"],
      "@management:infra/*": ["modules/management/infra/*"],
      "@management:mapper/*": ["modules/management/mapper/*"],
      "@management:models/*": ["modules/management/@types/models/*"],
      "@management:providers/*": ["modules/management/providers/*"],
      "@management:repositories/*": ["modules/management/@types/repositories/*"],
      "@management:routes/*": ["modules/management/infra/http/routes/*"],
      "@management:use-cases/*": ["modules/management/use-cases/*"],

      "@students:containers/*": ["modules/students/containers/*"],
      "@students:dtos/*": ["modules/students/@types/dtos/*"],
      "@students:errors/*": ["modules/students/errors/*"],
      "@students:infra/*": ["modules/students/infra/*"],
      "@students:mapper/*": ["modules/students/mapper/*"],
      "@students:models/*": ["modules/students/@types/models/*"],
      "@students:repositories/*": ["modules/students/@types/repositories/*"],
      "@students:routes/*": ["modules/students/infra/http/routes/*"],
      "@students:use-cases/*": ["modules/students/use-cases/*"],

      "@content:containers/*": ["modules/content/containers/*"],
      "@content:dtos/*": ["modules/content/@types/dtos/*"],
      "@content:errors/*": ["modules/content/errors/*"],
      "@content:infra/*": ["modules/content/infra/*"],
      "@content:mapper/*": ["modules/content/mapper/*"],
      "@content:models/*": ["modules/content/@types/models/*"],
      "@content:repositories/*": ["modules/content/@types/repositories/*"],
      "@content:routes/*": ["modules/content/infra/http/routes/*"],
      "@content:use-cases/*": ["modules/content/use-cases/*"],

      "@education:containers/*": ["modules/education/containers/*"],
      "@education:dtos/*": ["modules/education/@types/dtos/*"],
      "@education:errors/*": ["modules/education/errors/*"],
      "@education:infra/*": ["modules/education/infra/*"],
      "@education:mapper/*": ["modules/education/mapper/*"],
      "@education:models/*": ["modules/education/@types/models/*"],
      "@education:repositories/*": ["modules/education/@types/repositories/*"],
      "@education:routes/*": ["modules/education/infra/http/routes/*"],
      "@education:use-cases/*": ["modules/education/use-cases/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
