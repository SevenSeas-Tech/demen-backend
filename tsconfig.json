{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],

      "@shared/*": ["shared/*"],
      "@shared:containers/*": ["shared/containers/*"],
      "@shared:middlewares/*": ["shared/infra/http/middlewares/*"],
      "@shared:providers/*": ["shared/containers/providers/*"],
      "@shared:errors/*": ["shared/errors/*"],
      "@shared:typeorm/*": ["shared/infra/typeorm/*"],

      "@management:containers/*": ["modules/management/containers/*"],
      "@management:dtos/*": ["modules/management/dtos/*"],
      "@management:entities/*": ["modules/management/infra/typeorm/entities/*"],
      "@management:errors/*": ["modules/management/errors/*"],
      "@management:mapper/*": ["modules/management/mapper/*"],
      "@management:repos/*": ["modules/management/infra/typeorm/repositories/*"],
      "@management:irepos/*": ["modules/management/repositories/*"],
      "@management:routes/*": ["modules/management/infra/http/routes/*"],
      "@management:types/*": ["modules/management/@types/*"],
      "@management:use-cases/*": ["modules/management/use-cases/*"],

      "@admin:containers/*": ["modules/admin/containers/*"],
      "@admin:dtos/*": ["modules/admin/dtos/*"],
      "@admin:entities/*": ["modules/admin/infra/typeorm/entities/*"],
      "@admin:errors/*": ["modules/admin/errors/*"],
      "@admin:mapper/*": ["modules/admin/mapper/*"],
      "@admin:repos/*": ["modules/admin/infra/typeorm/repositories/*"],
      "@admin:irepos/*": ["modules/admin/repositories/*"],
      "@admin:routes/*": ["modules/admin/infra/http/routes/*"],
      "@admin:types/*": ["modules/admin/@types/*"],
      "@admin:use-cases/*": ["modules/admin/use-cases/*"],

      "@lessons:containers/*": ["modules/lessons/containers/*"],
      "@lessons:dtos/*": ["modules/lessons/dtos/*"],
      "@lessons:entities/*": ["modules/lessons/infra/typeorm/entities/*"],
      "@lessons:errors/*": ["modules/lessons/errors/*"],
      "@lessons:mapper/*": ["modules/lessons/mapper/*"],
      "@lessons:repos/*": ["modules/lessons/infra/typeorm/repositories/*"],
      "@lessons:irepos/*": ["modules/lessons/repositories/*"],
      "@lessons:routes/*": ["modules/lessons/infra/http/routes/*"],
      "@lessons:types/*": ["modules/lessons/@types/*"],
      "@lessons:use-cases/*": ["modules/lessons/use-cases/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
